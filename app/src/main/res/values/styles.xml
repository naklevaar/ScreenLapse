<resources>
    <!-- Legacy theme (renamed to avoid conflict) -->
    <style name="LegacyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_primary</item> <!-- Fallback, adjust if needed -->
        <item name="colorAccent">@color/md_theme_accent</item>
    </style>

    <!-- Fullscreen theme for LockActivity -->
    <style name="Theme.AppCompat.NoActionBar.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.App.CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">#4CAF50</item> <!-- Green -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="Widget.App.CustomButtonPurple" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">#8E24AA</item> <!-- Purple -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="Widget.App.CustomButtonBlue" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">#2196F3</item> <!-- Blue -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">6dp</item>
    </style>
    <!-- Outlined pastel button style -->
    <style name="Widget.App.OutlinedPastelButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_fill</item>
        <item name="strokeColor">@color/button_outline</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Filled pastel support/help button -->
    <style name="Widget.App.FilledSupportButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/support_button_bg</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/support_button_text</item>
        <item name="android:elevation">4dp</item>
    </style>
    <!-- Pick Apps Button (Pastel Pink) -->
    <style name="Widget.App.PickAppsButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FCE4EC</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#880E4F</item>
        <item name="iconTint">#880E4F</item>
        <item name="rippleColor">#FFF0F5</item>
    </style>

    <!-- Set Time Button (Pastel Blue) -->
    <style name="Widget.App.SetTimeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#E3F2FD</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#0D47A1</item>
        <item name="iconTint">#0D47A1</item>
        <item name="rippleColor">#DCEEFF</item>
    </style>

    <!-- View Stats Button (Mint Green) -->
    <style name="Widget.App.ViewStatsButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#E8F5E9</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#1B5E20</item>
        <item name="iconTint">#1B5E20</item>
        <item name="rippleColor">#C8E6C9</item>
    </style>

    <!-- Switch Profile Button (Lavender) -->
    <style name="Widget.App.SwitchProfileButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#F3E5F5</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#4A148C</item>
        <item name="iconTint">#4A148C</item>
        <item name="rippleColor">#E1BEE7</item>
    </style>

    <!-- Privacy Policy Button (Peach) -->
    <style name="Widget.App.PrivacyPolicyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FFF3E0</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#E65100</item>
        <item name="iconTint">#E65100</item>
        <item name="rippleColor">#FFE0B2</item>
    </style>


</resources>